<div class="job-box">
  <div class="container">

<div class="box-1">
  <div class="col-md-6">
    <div class="job-title">

    <%= link_to(job.title, job_path(job)) %>

    <%= job.created_at.to_date %>
    </div>
    <div class="job-number">
      <span> <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </span>
    </div>
  </div>
</div>
<div class="box-2">
  <div class="col-md-6">
    <div class="job-company">
      <span>公司：</span><%= job.company %>
    </div>

    <div class="job-city">
      <span>城市：</span><%= job.city %>

    </div>

  </div>

</div>

</div>
</div>
